<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/invite_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/invite_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite People"
            android:layout_gravity="center"
            android:textColor="@color/purple_200"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <LinearLayout
                android:id="@+id/circle_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/blue_circle"
                android:elevation="3dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_add"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_lnr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/invite_lnr"
        android:orientation="vertical">


    </LinearLayout>
    <Button
        android:id="@+id/meeting_sumbit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/blue_bg"
        android:elevation="5dp"
        android:fontFamily="@font/nunito_semibold"
        android:letterSpacing="0.01"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>